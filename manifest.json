{
  "manifest_version": 3,
  "name": "AI Search Visibility Checker",
  "version": "1.0.0",
  "description": "Instantly check if your website has good AI search visibility for ChatGPT, Claude, and Perplexity",
  
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check AI Search Visibility"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  }
  
}
