{
  "manifest_version": 3,
  "name": "AI Search Visibility Checker",
  "version": "1.1.0",
  "description": "Check your AI search visibility score and reveal the exact queries ChatGPT generates behind the scenes",

  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "https://chatgpt.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Check AI Search Visibility"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["chatgpt-content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  }

}
